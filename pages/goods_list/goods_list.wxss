.pro-wrap {
  padding: 20rpx;
}
.pro-wrap .pro-item {
  display: flex;
  margin-top: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ececec;
}
.pro-wrap .pro-item .pro-img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pro-wrap .pro-item .pro-txt {
  flex: 3;
  margin-left: 15rpx;
  color: #666666;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.pro-wrap .pro-item .txt-top {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.pro-wrap .pro-item .txt-price {
  color: var(--themeColor);
  font-size: 30rpx;
}
