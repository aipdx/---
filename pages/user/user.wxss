page {
  background-color: #dddddd;
  height: 100vh;
}
.photo_wrap {
  height: 45vh;
}
.photo_wrap .unlogin {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  background-color: #FFCC99;
}
.photo_wrap .login-wrap {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  position: relative;
}
.photo_wrap .login-wrap .photo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}
.photo_wrap .login-wrap .bg-img image {
  height: 45vh;
  filter: blur(10rpx);
}
.photo_wrap .login-wrap .photo_name_wrap {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}
.photo_wrap .login-wrap .nickname {
  font-weight: bold;
  font-size: 40rpx;
  margin-top: 30rpx;
  color: #ffffff;
}
.detail_wrap {
  padding: 20rpx;
  position: relative;
  z-index: 10;
  top: -90rpx;
}
.detail_wrap .info_num_wrap {
  background-color: #fff;
  padding: 20rpx 0;
}
.detail_wrap .info_num_wrap .info_item_wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.detail_wrap .info_num_wrap .info_num_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.detail_wrap .info_num_wrap .info_num_item .num {
  color: var(--themeColor);
}
.detail_wrap .info_num_wrap .info_num_item .num-txt {
  color: #666666;
}
.detail_wrap .my_order_wrap {
  margin-top: 20rpx;
  background-color: #fff;
}
.detail_wrap .my_order_wrap .order_title {
  padding: 20rpx;
  border-bottom: 1px solid #ececec;
}
.detail_wrap .my_order_wrap .icon_wrap {
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.detail_wrap .my_order_wrap .icon_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.detail_wrap .my_order_wrap .icon_item .icon {
  color: var(--themeColor);
  font-size: 38rpx;
}
.detail_wrap .my_order_wrap .icon_item .icon_txt {
  color: #666666;
}
.detail_wrap .address_wrap {
  margin-top: 20rpx;
  padding: 29rpx;
  background-color: #fff;
}
.detail_wrap .tool_wrap {
  background-color: #fff;
  margin-top: 20rpx;
}
.detail_wrap .tool_wrap .tool_item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1px solid #ececec;
}
.detail_wrap .share_wrap {
  position: relative;
}
.detail_wrap .share_wrap button {
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}
